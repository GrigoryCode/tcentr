<h1>Show Item</h1>

<h2><%= @item.title %></h2>
<p><%= @item.description %></p>

<%= link_to "Back", root_path  %>

<% if current_user && current_user.admin %>
<%= link_to "Edit", edit_item_path(@item)  %>
<%= link_to "Delete", item_path(@item), method: :delete, data: { confirm: "Are you shure?" } %>
<% end %>