<div class="container">

  <h1>Show Item</h1>

  <div class="row">

    <div class="col-md-6">
      <%= image_tag @item.item_img.url(:original), class: "item-img" %>
    </div>

    <div class="col-md-6">
      <h3 class="my-3"><%= @item.title %></h3>
      <p>Category: <%= @item.category.name %></p>
      <p><%= @item.description %></p>
      <p>$<%= @item.price %></p>

      <% if current_user && current_user.admin %>
        <%= link_to "Edit", edit_item_path(@item), class: "btn btn-primary mt-3"  %>
        <%= link_to "Delete", item_path(@item), method: :delete, data: { confirm: "Are you shure?" }, class: "btn btn-danger mt-3" %>
      <% end %>

    </div>

  </div>




</div>


