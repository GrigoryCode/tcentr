<div class="container">

  <h1>Edit Item</h1>

  <%= simple_form_for @item, html: {multipart: true} do |f| %>
    <%= f.file_field :item_img %>
    <%= f.select :category_id, @categories, {}, {class: "form-control"} %>
    <%= f.input :title, label: "Item Title" %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.button :submit %>
  <% end %>

</div>

